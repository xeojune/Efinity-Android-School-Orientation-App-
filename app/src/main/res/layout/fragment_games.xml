<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.GamesFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:textSize="50sp"
        android:gravity="center"
        android:text="GAME\nTIME" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/treasurePlayBtn"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="245dp"
        android:background="@drawable/bgovalbutton"
        android:text="Treasure Hunt"
        android:textAllCaps="false"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:textSize="30sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="415dp"
        android:background="@drawable/bgovalbutton"
        android:backgroundTint="#FFCC9C"
        android:fontFamily="casual"
        android:text="Scatter Tag"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="575dp"
        android:background="@drawable/bgovalbutton"
        android:backgroundTint="#9AFFED"
        android:fontFamily="casual"
        android:text="Boss Fight"
        android:textAllCaps="false"
        android:textSize="30sp"
        android:textStyle="bold" />


</RelativeLayout>